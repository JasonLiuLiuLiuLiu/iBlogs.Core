@section scripts
{
    <script>
        var tale = new $.tale();
        var vm = new Vue({
            el: '#app',
            data: {
                logPage: {},
                comments: [],
                isLoading: true
            },
            beforeCreate: function () {
                vueLoding = this.$loading.show();
            },
            mounted: function () {
                this.load(1);
            },
            methods: {
                load: function (page) {
                    var $vm = this;
                    tale.get({
                        url: '/admin/api/logs',
                        data: {
                            page: page,
                            limit: 6
                        },
                        success: function (data) {
                            if (!data.payload) {
                                $vm.logPage = [];
                            } else {
                                $vm.logPage = data.payload;
                            }
                        },
                        error: function (error) {
                            console.log(error);
                            alert(error || '数据加载失败');
                        }
                    });
                }
            }
        });

        $(document).ready(function () {
            vm.isLoading = false;
            vueLoding.hide();
        });
    </script>
}

