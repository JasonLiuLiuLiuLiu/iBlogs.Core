                            alert(result.msg || '数据加载失败');
                        }
                    });
                },
                load: function (page) {
                    var $vm = this;
                    $vm.search.page = page;

                    tale.get({
                        url: '/admin/api/articleList',
                        data: $vm.search,
                        success: function (data) {
                            $vm.articlePage = data.payload;
                        },
                        error: function (error) {
                            console.log(error);
                            alert(error || '数据加载失败');
                        }
                    });
                },
                deleteArticle: function (cid) {
                    var $vm = this;
                    tale.alertConfirm({
                        title: '确定删除该文章吗?',
                        then: function () {
                            tale.post({
                                url: '/admin/api/article/Delete/' + cid,
                                success: function (result) {
                                    if (result && result.success) {
                                        tale.alertOk('文章删除成功');
                                        $vm.load(1);
                                    } else {
                                        tale.alertError(result.msg || '文章删除失败');
                                    }
                                }
                            });
                        }
                    });
                },
                sync: function (cid) {
                    bootbox.prompt({
                        title: "This is a prompt with a set of checkbox inputs!",
                        inputType: 'checkbox',
                        inputOptions: [{
                                text: '博客园',
                                value: 'CnBlogs'
                            },
                            {
                                text: 'CSDN',
                                value: 'CSDN'
                            },
                            {
                                text: '微信公众号',
                                value: 'WeChart'
                            }],
                        callback: function (result) {
                            tale.post({
                                url: '/admin/api/article/sync',
                                data: {
                                    cid: cid,
                                    targets:result
                                },
                                success: function (result) {
                                    if (result && result.success) {
                                        tale.alertOk('同步请求发送成功');
                                    } else {
                                        tale.alertError(result.msg || '同步请求发送失败');
                                    }
                                }
                            });
                        }
                    });
                }
            }
        });

        $(document).ready(function () {
            vm.isLoading = false;
            vueLoding.hide();
        });
    </script>
}
