@using iBlogs.Site.Core.Common.Extensions
@using iBlogs.Site.Core.Common.Service
@using iBlogs.Site.Core.Option
@inject IViewService ViewService
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="renderer" content="webkit">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="Cache-Control" content="no-transform" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <meta name="keywords" content="@ViewService.MetaKeywords()" />
    <meta name="description" content="@ViewService.MetaDescription()" />
    <meta content="${_csrf_token}" name="csrf_token" />
    <link href="/css/app.css" rel="stylesheet">
    <link href="/css/topstory-routes.css" rel="stylesheet">
    <link href="~/css/tag.css" rel="stylesheet" />
    <script src="@ViewService.ThemeUrl("/static/js/headroom.min.js")"></script>
    <script src="@ViewService.ThemeUrl("/static/js/instantclick.min.js")"></script>
    <link rel="shortcut icon" href="@ViewService.ThemeUrl("/static/img/favicon.png")" />
    <link rel="apple-touch-icon" href="@ViewService.ThemeUrl("/static/img/apple-touch-icon.png")" />
    <title>@(ViewData["title"] ?? "iBlogs")</title>
    <link href="@ViewService.ThemeUrl("/static/css/default.min.css")" rel="stylesheet">
    <link href="@ViewService.ThemeUrl("/static/css/style.min.css")" rel="stylesheet">
    @if (ViewService.AllowCloudCdn() == "true")
    {
        <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    }
    else
    {
        <script src="/static/admin/plugins/jquery/3.2.1/jquery.min.js"></script>
    }

    <script src="@ViewService.ThemeUrl("/static/js/highlight.min.js")"></script>
    <script src="@ViewService.ThemeUrl("/static/js/instantclick.min.js")"></script>
</head>
<body class="bg-grey Entry-body" gtools_scp_screen_capture_injected="true">
    <header id="header" class="bg-white Sticky AppHeader header" style="position: relative" data-za-module="TopNavBar">
        <div class="navbar-container">
            <a href="@ViewService.SiteUrl()" class="navbar-logo">
                <img src="@ViewService.ThemeUrl("/static/img/logo.png")" alt="@ViewService.SiteOption(ConfigKey.SiteTitle)" />
            </a>
            <div class="navbar-menu">
                <a href="@ViewService.SiteUrl("/archives")">归档</a>
                <a href="@ViewService.SiteUrl("/links")">友链</a>
                <a href="@ViewService.SiteUrl("/about")">关于</a>
            </div>
            <div class="navbar-search" onclick="">
                <span class="icon-search"></span>
                <form role="search" onsubmit="return false;">
                    <span class="search-box">
                        <input type="text" id="search-inp" class="input" placeholder="搜索..." maxlength="30"
                               autocomplete="off">
                    </span>
                </form>
            </div>
            <div class="navbar-mobile-menu" onclick="">
                <span class="icon-menu cross"><span class="middle"></span></span>
                <ul>
                    <li><a href="@ViewService.SiteUrl("/archives")">归档</a></li>
                    <li><a href="@ViewService.SiteUrl("/links")">友链</a></li>
                    <li><a href="@ViewService.SiteUrl("/about")">关于</a></li>
                </ul>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer id="footer" class="footer bg-white">
        <div class="footer-social">
            <div class="footer-container clearfix">
                <div class="social-list">
                    @if (!ViewService.SiteOption(ConfigKey.WeiBo).IsNullOrWhiteSpace())
                    {
                        <a class="social weibo" target="_blank" href="http://weibo.com/@ViewService.SiteOption(ConfigKey.WeiBo)">微博</a>
                    }

                    @if (!ViewService.SiteOption(ConfigKey.ZhiHu).IsNullOrWhiteSpace())
                    {
                        <a class="social zhihu" target="_blank" href="https://www.zhihu.com/people/@ViewService.SiteOption(ConfigKey.ZhiHu)">知乎</a>
                    }

                    <a class="social rss" target="_blank" href="/feed">RSS</a>
                    <a class="social rss" target="_blank" href="/sitemap.xml">Site Map</a>

                    @if (!ViewService.SiteOption(ConfigKey.Github).IsNullOrWhiteSpace())
                    {
                        <a class="social github" target="_blank"
                           href="https://github.com/@ViewService.SiteOption(ConfigKey.Github)">Github</a>
                    }

                    @if (!ViewService.SiteOption(ConfigKey.Twitter).IsNullOrWhiteSpace())
                    {
                        <a class="social twitter" target="_blank" href="https://twitter.com/@ViewService.SiteOption(ConfigKey.Twitter)">Twitter</a>
                    }
                </div>
            </div>
        </div>
        <div class="footer-meta">
            <div class="footer-container">
                <div class="meta-item meta-copyright">
                    <div class="meta-copyright-info">
                        <a href="@ViewService.SiteUrl()" class="info-logo">
                            <img src="/templates/themes/default/static/img/logo.png" alt="@ViewService.SiteOption(ConfigKey.SiteTitle)">
                        </a>
                        <div class="info-text">
                            <p>Always coding,Always writing!</p>
                            <p>
                                Azure Pipeline Build <a href="https://dev.azure.com/ZhenyuDevOps/iBlogs/_build/latest?definitionId=1&branchName=master" target="_blank">@ViewService.BuildNumber()</a>
                            </p>
                            <p>
                                <a href="http://iblogs.site">iblogs.site</a> | <a href="http://www.beian.gov.cn">赣ICP备18014060号-2</a>
                            </p>
                            <p>
                                Powered by  <a href="https://github.com/liuzhenyulive/iblogs" target="_blank">iBlogs</a> &copy; @DateTime.Now.Year <a href="https://github.com/liuzhenyulive" target="_blank">Liu, zhenyu</a>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="meta-item meta-posts">
                    <h3 class="meta-title">
                        <svg viewBox="0 0 54.971 54.971" width="10" height="10">
                            <g><path d="M51.173,3.801c-5.068-5.068-13.315-5.066-18.384,0l-9.192,9.192c-0.781,0.781-0.781,2.047,0,2.828c0.781,0.781,2.047,0.781,2.828,0l9.192-9.192c1.691-1.69,3.951-2.622,6.363-2.622c2.413,0,4.673,0.932,6.364,2.623s2.623,3.951,2.623,6.364c0,2.412-0.932,4.672-2.623,6.363L36.325,31.379c-3.51,3.508-9.219,3.508-12.729,0c-0.781-0.781-2.047-0.781-2.828,0s-0.781,2.048,0,2.828c2.534,2.534,5.863,3.801,9.192,3.801s6.658-1.267,9.192-3.801l12.021-12.021c2.447-2.446,3.795-5.711,3.795-9.192C54.968,9.512,53.62,6.248,51.173,3.801z" /><path d="M27.132,40.57l-7.778,7.778c-1.691,1.691-3.951,2.623-6.364,2.623c-2.412,0-4.673-0.932-6.364-2.623c-3.509-3.509-3.509-9.219,0-12.728L17.94,24.306c1.691-1.69,3.951-2.622,6.364-2.622c2.412,0,4.672,0.932,6.363,2.622c0.781,0.781,2.047,0.781,2.828,0s0.781-2.047,0-2.828c-5.067-5.067-13.314-5.068-18.384,0L3.797,32.793c-2.446,2.446-3.794,5.711-3.794,9.192c0,3.48,1.348,6.745,3.795,9.191c2.446,2.447,5.711,3.795,9.191,3.795c3.481,0,6.746-1.348,9.192-3.795l7.778-7.778c0.781-0.781,0.781-2.047,0-2.828S27.913,39.789,27.132,40.57z" /></g>
                        </svg>
                        &nbsp 关注博主
                    </h3>
                    <div style="margin: 0 0">
                        <div style="float:right;width:35%;">
                            <img height="100%" width="100%" src="https://raw.githubusercontent.com/liuzhenyulive/iBlogs/Development/Pic/coderayu.png">
                        </div>
                        <div style="margin-right:35%;padding-right:5px;" class="info-text">
                            <p style="margin: 0 0">码农阿宇,已对接此博客系统的公众号,深度技术,实用干货,扫码发车.</p>
                            <p style="margin: 0 0">Scan code to start.</p>
                        </div>
                    </div>
                </div>

                <div class="meta-item meta-comments">
                    <h3 class="meta-title">
                        <svg viewBox="0 0 51.997 51.997" width="10" height="10">
                            <g><path d="M51.911,16.242C51.152,7.888,45.239,1.827,37.839,1.827c-4.93,0-9.444,2.653-11.984,6.905c-2.517-4.307-6.846-6.906-11.697-6.906c-7.399,0-13.313,6.061-14.071,14.415c-0.06,0.369-0.306,2.311,0.442,5.478c1.078,4.568,3.568,8.723,7.199,12.013l18.115,16.439l18.426-16.438c3.631-3.291,6.121-7.445,7.199-12.014C52.216,18.553,51.97,16.611,51.911,16.242z M49.521,21.261c-0.984,4.172-3.265,7.973-6.59,10.985L25.855,47.481L9.072,32.25c-3.331-3.018-5.611-6.818-6.596-10.99c-0.708-2.997-0.417-4.69-0.416-4.701l0.015-0.101C2.725,9.139,7.806,3.826,14.158,3.826c4.687,0,8.813,2.88,10.771,7.515l0.921,2.183l0.921-2.183c1.927-4.564,6.271-7.514,11.069-7.514c6.351,0,11.433,5.313,12.096,12.727C49.938,16.57,50.229,18.264,49.521,21.261z" /></g>
                        </svg>
                        联系博主
                    </h3>

                    <div style="margin: 0 0">
                        <div style="float:right;width:35%;">
                            <img height="100%" width="100%" src="https://raw.githubusercontent.com/liuzhenyulive/iBlogs/Development/Pic/liuzhenyu.png">
                        </div>
                        <div style="margin-right:35%;padding-right:5px;" class="info-text">
                            <p style="margin: 0 0">刘振宇,常年活动在杭州周边,如果你需要我,欢迎扫面右边微信二维码与我联系.</p>
                            <a style="margin: 0 0" href="mailto:liuzhenyulive@live.com?subject=Mail from iBlogs">liuzhenyulive@live.com</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script>
        hljs.initHighlightingOnLoad();
    </script>
    <script>

        var header = new Headroom(document.getElementById("header"), {
            tolerance: 10,
            offset: 80,
            classes: {
                initial: "animated",
                pinned: "slideDown",
                unpinned: "slideUp"
            }
        });
        header.init();
        $('#search-inp').keypress(function (e) {
            var key = e.which; //e.which是按键的值
            if (key === 13) {
                var q = $(this).val();
                if (q && q !== '') {
                    window.location.href = '/search/' + q;
                }
            }
        });
    </script>
    <script data-no-instant>
        InstantClick.on('change', function (isInitialLoad) {
            var blocks = document.querySelectorAll('pre SetCode');
            for (var i = 0; i < blocks.length; i++) {
                hljs.highlightBlock(blocks[i]);
            }
            if (isInitialLoad === false) {
                if (typeof ga !== 'undefined') ga('send', 'pageview', location.pathname + location.search);
            }
        });
        InstantClick.init('mousedown');
    </script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-145058275-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-145058275-1');
    </script>
</body>
</html>